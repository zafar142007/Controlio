    <Button
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="=" />
-->
	    <Button android:id="@+id/left" android:text="lft" />
	    <Button android:id="@+id/down" android:text="dwn" />
	    <Button android:id="@+id/right" android:text="rgt" />
	    <Button android:id="@+id/options" android:text="opt" />
	    <Button android:id="@+id/open" android:text="Enter" 
	         android:layout_columnSpan="2"
        	android:layout_gravity="fill"
        	/>   
        <Button android:id="@+id/stop" android:text="Space" 
	         android:layout_columnSpan="2"
        	android:layout_gravity="fill"
        	 />   
        
</GridLayout>