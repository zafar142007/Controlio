<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal" 
	android:layout_gravity="center">

    <EditText
        android:id="@+id/hostIPTextbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/hostIP"
        android:inputType="phone" 
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        />


  <Switch
    android:id="@+id/typingMode"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:hint="@string/typingMode"
    android:textColorHint="#000000"
    android:inputType="number"
    android:layout_columnSpan="4"
    android:layout_gravity="fill"/>

    <Button
        android:id="@+id/send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/sendHi" 
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        />

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/speak"
        android:src="@android:drawable/ic_btn_speak_now" 
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        />
    <Button android:id="@+id/next" android:text="Tab" />

    <Button android:id="@+id/closeTab" android:text="Xtb" />

    <Button android:id="@+id/activeWindows" android:text="AWn" />

    <Button android:id="@+id/newTab" android:text="+Tab" />

    <Button android:id="@+id/previousTab" android:text="PTab" />

    <Button android:id="@+id/nextTab" android:text="NTab" />

    <Button android:id="@+id/pageUp" android:text="PU" />

    <Button android:id="@+id/back" android:text="Bk" />

    <Button android:id="@+id/forward" android:text="FWD" />

    <Button android:id="@+id/up" android:text="UP" />

    <Button android:id="@+id/pageDown" android:text="PD" />

